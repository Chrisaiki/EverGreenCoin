        background-color: #FFFFFF;
        color: black;
}

QVBoxLayout {
        border-radius: 6px;
        border-width: 0;
        border-style: none;
        padding: 8px;
        background-color: #FFFFFF;
        color: black;
}

QDialog {
        color: black;
        background-color: #FFFFFF;
        border: none;
}

QMainWindow {
        color: black;
        background-color: #FFFFFF;
        border: 2px solid #009900;
}

QMenu {
        background-color: #FFFFFF;
        color: black;
}

QLabel {
        background-color: transparent;
}

QCheckBox {
        border-radius: 2px;
        border-width: 0;
        border-style: none;
        padding: 3px;
        background-color: #FFFFFF;
        color: black;
}

QFrame#central {
        background-color: #FFFFFF;
}

QFrame#frame, QFrame#frame_2, QFrame#frame_3, QFrame#gridFrame_2, QFrame#SendCoinsEntry {
        background: QLinearGradient(x1: 0, y1: 0, x2: 1, y2: 0, stop: 0 #FFFFFF, stop: 1 #00b300);
        border-style: plain;
        border-width: 20px;
        border-radius: 15px;
        border-color: #BCED91;
        min-width: 10em;
        padding: 6px;
        color: #000000;
}

QLabel[openExternalLinks=true], QHeaderView { color: #aaaaaa }
QLabel[openExternalLinks=false] { color: black; font-weight: normal }


QPushButton, QToolButton {
        border-radius: 6px;
        background: QLinearGradient(x1: 0, y1: 0, x2: 1, y2: 0, stop: 0 #BCED91, stop: 1 #00b300);
        color: #000000;
        padding: 7px;
        margin: 5px;
}

QPushButton:hover, QToolButton:hover {
        color: #ffffff;
}

QPushButton:pressed, QToolButton:checked {
        color: #ffffff;
        background: QLinearGradient(x1: 0, y1: 0, x2: 1, y2: 0, stop: 0 #00b300, stop: 1 #009900);
}

QPushButton:pressed, QToolButton:pressed {
        color: #009900;
        background: QLinearGradient(x1: 0, y1: 0, x2: 1, y2: 0, stop: 0 #FFFFFF, stop: 1 #00b300);
}

QPushButton:disabled, QToolButton:disabled {
        color: #000000;
        background: QLinearGradient(x1: 0, y1: 0, x2: 1, y2: 0, stop: 0 #FFFFFF, stop: 1 #00b300);
}


