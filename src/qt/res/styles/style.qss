QHeaderView { color: #FFFFFF; background-color: #00b300; background-image: none; }
QHeaderView::section { color: #FFFFFF; background-color: #00b300; }
QHeaderView::section:checked { background-color: #00b300; }

QTabWidget {
        border: 3px solid #00b300;
        border-radius: 6px;
        background-color: #009900;
        color: #000000;
        padding: 7px;
}

QTabWidget::pane {
        border-top: 4px solid #00b300;
        border: 3px solid #00b300;
                border-radius: 6px;
        background: #FFFFFF;
}

QTabWidget::tab-bar {
        left: 5px; /* move to the right by 5px */
}

 /* Style the tab using the tab sub-control. Note that
     it reads QTabBar _not_ QTabWidget */

QTabBar::tab {
        background: #BCED91;
        border: 4px solid #BCED91;
        border-bottom-color: #BCED91; /* same as the pane color */
        border-top-left-radius: 4px;
        border-top-right-radius: 4px;
        min-width: 8ex;
        padding: 4px;
        color: #000000;
}

QTabBar::tab:selected, QTabBar::tab:hover {
        color: #FFFFFF;
        background: #00b300;
        border: 4px solid #00b300;
        border-bottom-color: #00b300;
}

QTabBar::tab:selected {
        border-color: #00b300; /* same as pane color */
        border-top-color: #00b300;
}

QTabBar::tab:!selected {
        margin-top: 2px; /* make non-selected tabs look smaller */
}

 /* make use of negative margins for overlapping tabs */
QTabBar::tab:selected {
     /* expand/overlap to the left and right by 4px */
        margin-left: -4px;
        margin-right: -4px;
}

QTabBar::tab:first:selected {
        margin-left: 0; /* the first selected tab has nothing to overlap with on the left */
}

QTabBar::tab:last:selected {
        margin-right: 0; /* the last selected tab has nothing to overlap with on the right */
}

QTabBar::tab:only-one {
        margin: 0; /* if there is only one tab, we don't want overlapping margins */
}


